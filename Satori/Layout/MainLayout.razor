@using Satori.Pages.Components
@using MudBlazor
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar" style="@IconMenuCssClass">
        <NavMenu ShowIconMenu="ToggleIconMenu" />
    </div>

    <main>
        <article class="content px-4">
            <MudThemeProvider />
            <MudPopoverProvider />
            <MudDialogProvider />
            <MudSnackbarProvider />

            <AlertBanner/>
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IconMenuActive { get; set; }
    private string? IconMenuCssClass => IconMenuActive ? "width: 95px;" : null;

    protected void ToggleIconMenu(bool iconMenuActive)
    {
        IconMenuActive = iconMenuActive;
    }
}